@model WebCakeTools.Models.Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}





<div class="table-responsive p-3 m-3 rounded-3 shadow">



    <form asp-action="UpdateCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="control-label mb-2">Nhập tên danh mục</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ParentId" class="control-label mb-2">Chọn danh mục cha (không băt buộc)</label>
            <select asp-for="ParentId" class="form-control" asp-items="@ViewBag.ParentCategories"><option value="None">Select</option></select>
            <span asp-validation-for="ParentId" class="text-danger"></span>
        </div>
        <div class="form-group d-flex gap-2">
            <input type="submit" value="cập nhật" class="btn btn-custom" />
            <a asp-action="CategoryList" class="btn btn-custom">quay lại</a>
        </div>
    </form>


    
</div>








