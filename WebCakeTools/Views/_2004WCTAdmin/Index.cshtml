@model WebCakeTools.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">📊 Admin Dashboard</h2>

    <div class="row mb-4">
        <div class="col-12 col-md-4">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Tổng số sản phẩm</h5>
                    <p class="card-text display-6">@Model.TotalProducts</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top 5 by Contact -->
        <div class="col-12 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    🔝 5 sản phẩm có lượt liên hệ cao nhất
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Liên hệ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.TopContactProducts)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@product.Contact</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Top 5 newest -->
        <div class="col-12 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    🆕 5 sản phẩm mới nhất
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Ngày tạo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.LatestProducts)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@product.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>