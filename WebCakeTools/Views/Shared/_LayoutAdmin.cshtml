<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Playfair+Display&family=Quicksand&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/layoutAdmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebCakeTools.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    




    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-background" id="sidebarBackground"></div>

        <!-- Logo and Toggle -->
        <div class="logo">
            <div class="d-flex align-items-center">
                <i class="bi bi-cupcake"></i>
                
                <a class="nav-link" asp-controller="_2004WCTAdmin" asp-action="Index"><span class="logo-text">Cake Tools</span></a>
            </div>
            
        </div>

        <!-- Nav -->
        <nav class="nav flex-column">
            <a class="nav-link" asp-controller="_2004WCTAdmin" asp-action="Index"><i class="bi bi-speedometer2"></i> <span>Dashboard</span></a>
           @*  <a class="nav-link" href="#"><i class="bi bi-receipt"></i> <span>Orders</span></a> *@

            <!-- Products with submenu -->
            <a class="nav-link" data-target="productsSubmenu" href="#" onclick="toggleSubmenu(event)">
                <i class="bi bi-box-seam"></i> <span>Products</span>
                <i class="bi bi-chevron-down ms-auto"></i>
            </a>
            <div class="submenu" id="productsSubmenu">
                <a class="nav-link" asp-action="CreateProduct">Add Product</a>
                <a class="nav-link" asp-area="" asp-controller="_2004WCTAdmin" asp-action="ProductList">List Products</a>
                
            </div>
            <a class="nav-link" data-target="categoriesSubmenu" href="#" onclick="toggleSubmenu(event)">
                <i class="bi bi-box-seam"></i> <span>Categories</span>
                <i class="bi bi-chevron-down ms-auto"></i>
            </a>
            <div class="submenu" id="categoriesSubmenu">
                <a class="nav-link" asp-action="CreateCategory">Add Category</a>
                <a class="nav-link" asp-area="" asp-controller="_2004WCTAdmin" asp-action="CategoryList">List Categories</a>
                
            </div>

            @* <a class="nav-link" href="#"><i class="bi bi-people"></i> <span>Customers</span></a> *@
        </nav>
    </div>




    <div class="main-content" id="mainContent">
        <nav class="navbar navbar-expand navbar-dark px-3 shadow-sm" id="adminNavbar">
            <h5> <a class="toggle-btn mb-0 text-white" onclick="toggleSidebar()"><i class="bi bi-list"></i></a></h5>
           

            <ul class="navbar-nav ms-auto d-flex align-items-center gap-3">
                <!-- Notification -->
               @*  <li class="nav-item">
                    <a class="nav-link text-white position-relative" href="#">
                        <i class="bi bi-bell fs-5"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                        </span>
                    </a>
                </li> *@

                <!-- Dark Mode Toggle -->
                <li class="nav-item">
                    <button class="btn btn-sm btn-outline-light" onclick="toggleTheme()" title="Toggle theme">
                        <i class="bi bi-moon-fill" id="themeIcon"></i>
                    </button>
                </li>

                <!-- User Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://i.pravatar.cc/30" alt="Avatar" class="rounded-circle me-2" width="30" height="30">
                        <span>Admin</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle me-2"></i>Profile(block)</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings(block)</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="_2004WCTAdmin" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>


        <div class="content-wrapper p-3">
            @RenderBody()
        </div>
        
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layoutAdmin.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
