<div class="formlogin">
    <h1>Đăng nhập</h1>
    <form method="post" asp-action="Login">
      <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

      <div class="form-group mb-4">
        <div class="input-group">
                <input placeholder="Nhập tên người dùng" name="username" class="form-control inputlogin" />
          <span class="input-group-text"><i class="bi bi-person"></i></span>
        </div>
        <span class="text-danger"></span>
      </div>

      <div class="form-group mb-4">
        <div class="input-group">
                <input id="passwordInput" name="password" placeholder="Nhập mật khẩu" type="password" class="form-control inputlogin" />
    <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
      <i class="bi bi-eye-slash" id="eyeIcon"></i>
    </span>
        </div>
        <span class="text-danger"></span>
      </div>

      <div class="form-group">
        <input type="submit" value="Đăng nhập" class="btn btn-custom-login" />
      </div>
        <p style="color:red">@ViewBag.Error</p>
    </form>
  </div>

<script src="~/js/login.js" asp-append-version="true"></script>